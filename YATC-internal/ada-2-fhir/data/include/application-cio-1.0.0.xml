    <!-- Setup: -->

    <!-- beschikbaarstellen_allergie_intolerantie -->
    <setup usecase="beschikbaarstellen_allergie_intolerantie" directory-id="bsai">
        <copy-project-schemas target-subdir="ada_schemas">
            <include glob="*$USECASE.xsd"/>
        </copy-project-schemas>
        <copy-data directory-id="bsai-ada-instance">
            <include glob="bs*.xml"/>
        </copy-data>
        <empty-directory target-subdir="fhir_instance" directory-id="bsai-fhir-instance"/>
    </setup>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- beschikbaarstellen_allergie_intolerantie_vertaling -->
    <setup usecase="beschikbaarstellen_allergie_intolerantie_vertaling" directory-id="bsaiv">
        <copy-project-schemas target-subdir="ada_schemas">
            <include glob="*$USECASE.xsd"/>
        </copy-project-schemas>
        <copy-data directory-id="bsaiv-ada-instance">
            <include glob="CIO-*.xml"/>
        </copy-data>
        <empty-directory target-subdir="fhir_instance" directory-id="bsaiv-fhir-instance"/>
    </setup>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- xml-voorbeelden -->
    <setup usecase="xml-voorbeelden" directory-id="xmlv">
        <copy-project-schemas target-subdir="ada_schemas">
            <!-- Schemas from the beschikbaarstellen_allergie_intolerantie_vertaling usecase: -->
            <include glob="*beschikbaarstellen_allergie_intolerantie_vertaling.xsd"/>
        </copy-project-schemas>
        <copy-data directory-id="xmlv-ada-instance">
            <include glob="*example*.xml"/>
        </copy-data>
        <empty-directory target-subdir="fhir_instance" directory-id="xmlv-fhir-instance"/>
    </setup>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- Nictiz test: -->
    <setup usecase="nictiz_test" directory-id="nt">
        <!-- IMPORTANT: The input files for Nictiz-test (instances and schemas) come from a fixed set of files in  
                 YATC-internal/ada-2-fhir/env/$BASEPATH/nictiz_test/         
            -->
        <copy-directory directory="#../../env/$BASEPATH/ada_instance" target-subdir="ada_instance" directory-id="nt-ada-instance" recurse="false"/>
        <copy-directory directory="#../../env/$BASEPATH/ada_schemas" target-subdir="ada_schemas" recurse="false"/>
        <empty-directory target-subdir="fhir_instance" directory-id="nt-fhir-instance"/>
    </setup>

    <!-- ======================================================================= -->
    <!-- Builds: -->

    <!-- Builds for beschikbaarstellen_allergie_intolerantie  -->
    <build name="build-resources-beschikbaarstellen_allergie_intolerantie">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie/payload/beschikbaarstellen_allergie_intolerantie_2_fhir_resources.xsl"/>
        <input-documents directory="@bsai-ada-instance"/>
        <discard-output/>
        <parameter name="outputDirectory" directory="@bsai-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <build name="build-beschikbaarstellen_allergie_intolerantie">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie/payload/beschikbaarstellen_allergie_intolerantie_2_fhir.xsl"/>
        <input-documents directory="@bsai-ada-instance"/>
        <output-documents directory="@bsai-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- Builds for beschikbaarstellen_allergie_intolerantie-vertaling -->
    <build name="build-resources-beschikbaarstellen_allergie_intolerantie-vertaling">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir_resources.xsl"/>
        <input-documents directory="@bsaiv-ada-instance"/>
        <discard-output/>
        <parameter name="outputDirectory" directory="@bsaiv-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <build name="build-beschikbaarstellen_allergie_intolerantie-vertaling">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir.xsl"/>
        <input-documents directory="@bsaiv-ada-instance"/>
        <output-documents directory="@bsaiv-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- Builds for xml-voorbeelden: -->
    <build name="build-resources-xml-voorbeelden">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir_resources.xsl"/>
        <input-documents directory="@xmlv-ada-instance"/>
        <discard-output/>
        <parameter name="outputDirectory" directory="@xmlv-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <build name="build-xml-voorbeelden">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir.xsl"/>
        <input-documents directory="@xmlv-ada-instance"/>
        <output-documents directory="@xmlv-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- Builds for Nictiz test: -->
    <build name="build-resources-nictiz-test">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir_resources.xsl"/>
        <input-documents directory="@nt-ada-instance"/>
        <discard-output/>
        <parameter name="outputDirectory" directory="@nt-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

    <build name="build-nictiz-test">
        <stylesheet href="../../env/$BASEPATH/beschikbaarstellen_allergie_intolerantie_vertaling/payload/beschikbaarstellen_allergie_intolerantie_vertaling_2_fhir.xsl"/>
        <input-documents directory="@nt-ada-instance"/>
        <output-documents directory="@nt-fhir-instance"/>
        <parameter name="bundleSelfLink" value="http://dummy.nictiz.nl/dummyquery"/>
    </build>

</application>
