    <macro name="DATAFILENAME" value="{$yatcComponentName}-data.xml"/>
    <macro name="PARBASESTORAGE" value="ada2fhirBaseStorageDirectory"/>
    <macro name="PARDATADOCUMENT" value="ada2fhirDataDocument"/>

    <title><code>{$yatcRepositoryName}/{$yatcComponentName}</code> available commands</title>

    <xi:include href="../../../../YATC-shared/srcmod/commands-common-opening.xml"/>

    <section>
        <macro name="COMMAND" value="{$yatcComponentName}"/>

        <title>Command: <code>yatc $COMMAND</code></title>

        <include-command-help-text href="../../bin/$COMMAND.bat"/>

        <emptyline/>
        <para>Command line examples:</para>
        <unorderedlist>
            <entry>
                <para><code>yatc $COMMAND -list</code><br/>Lists the available application/version combinations.</para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND -process mp 9.0.7</code><br/>Performs the FHIR to ADA conversion(s) for application <code>mp</code>, version <code>9.0.7</code>.</para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND mp 9.0.7</code><br/>Same as above (the <code>-process</code> flag is optional).</para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND -process #all #all</code><br/>Performs the FHIR 2 ADA conversion(s) for all applications/versions known.</para>
            </entry>
        </unorderedlist>

        <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <section>
            <title>YATC parameter usage</title>

            <xi:include href="../../../../YATC-shared/srcmod/commands-base-parameters-usage.xml"/>
