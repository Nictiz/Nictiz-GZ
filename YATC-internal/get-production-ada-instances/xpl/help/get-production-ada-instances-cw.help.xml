    <description>Get production ADA instances from ART-DECOR for an application/version. When specified, it also performs adarefs2ada processing.</description>

    <command-line-options>
        <xi:include href="../../../../YATC-shared/chtmod/help-command-line-option.xml"/>
        <xi:include href="../../../../YATC-shared/chtmod/list-command-line-option.xml"/>
        <command-line-option>
            <flag name="process" optional="true"/>
            <flag name="reporturls" optional="true">Report all used TEST URLs.</flag>
            <flag name="noretrieval" optional="true">Do not retrieve data from ART-DECOR, perform the adarefs2ada processing only.</flag>
            <flag name="noadarefs2ada" optional="true">Do not execute the adarefs2ada processing (if any).</flag>
            <argument name="application"/>
            <argument name="version"/>
            
            <description>Retrieve the ADA production documents for an application/version from ART-DECOR. Perform the adarefs2ada post-processing (if specified). To get all versions/applications, use either #all or %all.</description>
        </command-line-option>
    </command-line-options>

