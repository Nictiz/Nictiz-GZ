    <!-- SETUP: -->

    <message>=========================== {$yatcComponentName}/$BASEPATH</message>
    <message>WARNING: $BASEPATH uses fixed ADA data and schemas!</message>

    <setup usecase="dossieroverdracht" directory-id="jgzd">
        <!-- Remark: The output directory results cannot be compared because the stylesheet uses the current date/time to compute stuff. -->
        <empty-directory target-subdir="hl7_instance" directory-id="jgzd-hl7-instance" compare="false"/>
        <empty-directory target-subdir="hl7_instance_validate_warning" directory-id="jgzd-hl7-validate-warning" compare="false"/>
        <empty-directory target-subdir="hl7_instance_confirm_removed" directory-id="jgzd-hl7-instance-confirm-removed" compare="false"/>
    </setup>

    <!-- ======================================================================= -->
    <!-- BUILD: -->

    <build fast="false" name="convert-dossieroverdracht">
        <stylesheet href="../../env/jgz/8.0/dossieroverdracht/payload/dossieroverdracht_org.xsl"/>
        <input-documents directory="#../../../../art_decor/adarefs2ada/jgz/8.0/dossieroverdracht/ada_instance/"/>
        <output-documents directory="@jgzd-hl7-instance/" result-filename-suffix="_hl7.xml"/>
    </build>

    <build fast="false" name="convert-dossieroverdracht-confirm-removed">
        <stylesheet href="../../env/jgz/8.0/dossieroverdracht/payload/dossieroverdracht_org_confirm_removed.xsl"/>
        <input-documents directory="#../../../../art_decor/adarefs2ada/jgz/7.1/dossieroverdracht_unhappyflow/ada_instance/"/>
        <output-documents directory="@jgzd-hl7-instance-confirm-removed" result-filename-suffix="_hl7.xml"/>
    </build>

    <build fast="false" name="convert-dossieroverdracht-validate-warning">
        <stylesheet href="../../env/jgz/8.0/dossieroverdracht/payload/dossieroverdracht_org_validate_warning.xsl"/>
        <input-documents directory="#../../../../art_decor/adarefs2ada/jgz/7.1/dossieroverdracht_unhappyflow/ada_instance/"/>
        <output-documents directory="@jgzd-hl7-validate-warning" result-filename-suffix="_hl7.xml"/>
    </build>

