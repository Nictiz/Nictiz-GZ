    <xs:annotation>
        <xs:documentation>import-aorta-documents format</xs:documentation>
    </xs:annotation>
    <xs:element name="import-aorta-documents">
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="yatcs-iad:ct-import-specification">
                    <xs:attribute name="href-target" type="xs:anyURI" use="required">
                        <xs:annotation>
                            <xs:documentation>Target directory. A relative name is resolved against the YATC-internal base directory.</xs:documentation>
                        </xs:annotation>
                    </xs:attribute>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
    <xs:group name="g-documents">
        <xs:sequence>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="document">
                <xs:complexType>
                    <xs:attribute name="href" type="xs:anyURI" use="required"/>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:group>
    <xs:complexType name="ct-import-specification">
        <xs:choice maxOccurs="unbounded" minOccurs="0">
            <xs:group ref="yatcs-iad:g-documents"/>
            <xs:element name="directory">
                <xs:complexType>
                    <xs:complexContent>
                        <xs:extension base="yatcs-iad:ct-import-specification">
                            <xs:attribute name="href" type="xs:anyURI" use="required"/>
                        </xs:extension>
                    </xs:complexContent>
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>
</xs:schema>
