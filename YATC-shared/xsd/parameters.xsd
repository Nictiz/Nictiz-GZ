    <xs:annotation>
        <xs:documentation>Schema for a YATC parameters document</xs:documentation>
    </xs:annotation>
    <xs:element name="parameters">
        <xs:complexType>
            <xs:sequence>
                <xs:element minOccurs="0" name="sources">
                    <xs:annotation>
                        <xs:documentation>Optional list of source socuments for the parameters.</xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element maxOccurs="unbounded" minOccurs="0" name="source">
                                <xs:annotation>
                                    <xs:documentation>The URI of a parameter source document. Parameters reference this source by identifier.</xs:documentation>
                                </xs:annotation>
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:anyURI">
                                            <xs:attribute name="id" type="xs:NCName" use="required">
                                                <xs:annotation>
                                                    <xs:documentation>The internal identifier for this source document.</xs:documentation>
                                                </xs:annotation>
                                            </xs:attribute>
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element maxOccurs="unbounded" minOccurs="0" name="parameter">
                    <xs:annotation>
                        <xs:documentation>Definition of a single parameter.</xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element maxOccurs="unbounded" minOccurs="0" name="value" type="xs:string">
                                <xs:annotation>
                                    <xs:documentation>Value for the parameter. There can be more than one value.</xs:documentation>
                                </xs:annotation>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="name" type="xs:NCName" use="required">
                            <xs:annotation>
                                <xs:documentation>The name for the parameter. Must be unique for this parameters document.</xs:documentation>
                            </xs:annotation>
                        </xs:attribute>
                        <xs:attribute name="source-idref" type="xs:NCName">
                            <xs:annotation>
                                <xs:documentation>Reference to the source file this parameter/value came from.</xs:documentation>
                            </xs:annotation>
                        </xs:attribute>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="caller-static-base-uri" type="xs:anyURI">
                <xs:annotation>
                    <xs:documentation>The base URI of the caller when gathering the parameters (if available).</xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
</xs:schema>
