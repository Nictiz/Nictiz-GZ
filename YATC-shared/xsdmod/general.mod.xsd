    <xs:annotation>
        <xs:documentation>General schema components (use this in an xs:include)</xs:documentation>
    </xs:annotation>
    <xs:simpleType name="t-non-zero-length-string">
        <xs:annotation>
            <xs:documentation>A string with at least one character.</xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:string">
            <xs:minLength value="1"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="t-identifier">
        <xs:annotation>
            <xs:documentation>Type used for identifiers</xs:documentation>
        </xs:annotation>
        <xs:restriction base="xs:NCName"/>
    </xs:simpleType>
    <xs:complexType name="ct-empty">
        <xs:annotation>
            <xs:documentation>Empty element</xs:documentation>
        </xs:annotation>
    </xs:complexType>
</xs:schema>
