    <macro name="DATAFILENAME" value="{$yatcComponentName}-data.xml"/>
    <macro name="PARBASESTORAGE" value="ada2fhirBaseStorageDirectory"/>
    <macro name="PARDATADOCUMENT" value="distributeDataDocument"/>

    <title><code>{$yatcRepositoryName}/{$yatcComponentName}</code> available commands</title>

    <xi:include href="../../../../YATC-shared/srcmod/commands-common-opening.xml"/>

    <section>
        <macro name="COMMAND" value="{$yatcComponentName}"/>

        <title>Command: <code>yatc $COMMAND</code></title>

        <include-command-help-text href="../../xpl/$COMMAND-cw.xpl"/>

        <emptyline/>
        <para>Command line examples:</para>
        <unorderedlist>
            <entry>
                <para><code>yatc $COMMAND -list</code><br/>Lists the available distributions.</para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND -process dist-x</code><br/>Creates the distribution named <code>dist-x</code></para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND dist-x</code><br/>Same as above (the <code>-process</code> flag is optional).</para>
            </entry>
            <entry>
                <para><code>yatc $COMMAND dist-x -version:1.2.3</code><br/>Creates the distribution named <code>dist-x</code> with distribution version <code>1.2.3</code></para>
            </entry>
        </unorderedlist>

        <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

