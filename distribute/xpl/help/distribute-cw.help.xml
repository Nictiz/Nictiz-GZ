    <description>Creates a distribution.</description>
    
    <command-line-options>
        <xi:include href="../../../../YATC-shared/chtmod/help-command-line-option.xml"/>
        <command-line-option>
            <flag name="list"/>
            <argument name="distribution" optional="true"/>
            <description>Lists the distributions available. To get all distributions, use either `#all` or `%all`, or leave the argument empty.</description>
        </command-line-option>
        <command-line-option>
            <flag name="process" optional="true"/>
            <flag name="version" optional="true" argument="distribution-version">Provide a distribution-version. For instance: `-version:3.4`</flag>
            <argument name="distribution" />
            <description>Create this distribution. To create all distributions available, use either `#all` or `%all` as argument.</description>
        </command-line-option>
    </command-line-options>
    
