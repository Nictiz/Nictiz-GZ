    <parameter name="generalEngineConfiguration">
        <value>{$yatcComponentDirectory}/data/{$yatcComponentName}-general-engine-configuration.xml</value>
    </parameter>
    
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    
    <!-- *TBD* Replace COMPONENTSHORT with the shortend name of the component (= component name without hyphens/underscores). 
         For instance, the shortened name of ada-2-fhir is ada2fhir. -->
    <parameter name="COMPONENTSHORTDataDocument">
        <!-- The *absolute* name of the file with the application data. -->
        <value>{$yatcComponentDirectory}/data/{$yatcComponentName}-data.xml</value>
    </parameter>

    <parameter name="COMPONENTSHORTBaseStorageDirectory">
        <!-- The absolute URI of the base directory for storing the results of the processing.
             The application's name and version are appended to this, for instance: …/mp/9.0.7 -->
        <value>{$publicBaseStorageDirectory}/{$yatcComponentNameTraditional}</value>
    </parameter>

