    <xi:include href="../../chtmod/help-command-line-option.xml"/>
    <xi:include href="../../chtmod/list-command-line-option.xml"/>
    <command-line-option>
        <flag name="actionlist" optional="false"/>
        <argument name="application" optional="true"/>
        <argument name="version" optional="true"/>
        <description>Get a list of available actions (if any) for the given application/version combinations. To get the actions for all applications/versions available, use either `#all` or `%all` for the argument(s) or leave the argument(s) empty.</description>
    </command-line-option>
    <command-line-option>
        <flag name="process" optional="true"/>
        <flag name="nosetup" optional="true">Do not process the setup elements.</flag>
        <flag name="setup" optional="true">Always process the setup elements, even when an action turns setup off. Takes precedence over -nosetup.</flag>
        <flag name="action" optional="true" argument="...">Perform the action(s) specified. Separate multiple actions with a `+` (for instance `-action:ac1+ac2`). If not specified, the action flagged as default is processed (if any).</flag>
        <flag name="testmode" optional="true">Run in test mode. This will reduce the set of input documents for build and validate steps to only one.</flag>
        <argument name="application"/>
        <argument name="version"/>

        <description>Process the available application/version combinations. To process all applications/versions available, use either `#all` or `%all` for the argument(s).</description>

    </command-line-option>

</command-line-options>
