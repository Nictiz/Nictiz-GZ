    <parameter name="applicationAdaRetrievalDataDocument">
        <!-- The absolute URI of the file with the application ADA retrieval data. -->
        <value>{$yatcComponentDirectory}/data/application-ada-retrieval-data.xml</value>
    </parameter>
    
    <parameter name="serverForAdaRetrievalBaseUri">
        <!-- The base URI of the ART-DECOR server used for the ADA retrieval. -->
        <value>https://decor.nictiz.nl</value>
    </parameter>
    
    <parameter name="getDataRestCallUri">
        <!-- The URI for the REST call to ART-DECOR for getting data -->
        <value>{$serverForAdaRetrievalBaseUri}/ada/modules/get-data.xquery</value>
    </parameter>
    
    <parameter name="storeAdaIndexFiles">
        <!-- Whether or not to store the index documents (used when retrieving the ADA production instances) also. 
             Storage of these is not strictly necessary, but can be handy for debug purposes.
        -->
        <value>true</value>
    </parameter>

